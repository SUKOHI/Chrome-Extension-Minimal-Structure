{
  "manifest_version": 2,
  "name": "Chromeエクステンション名",
  "version": "1.0.0",
  "author": "開発者名",
  "default_locale": "ja",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_title": "__MSG_appName__"
  },
  "permissions": [
    "<all_urls>"
  ],
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  }
}
